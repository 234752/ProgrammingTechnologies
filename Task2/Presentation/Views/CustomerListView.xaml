<UserControl x:Class="Presentation.Views.CustomerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Views"
             xmlns:VM="clr-namespace:Presentation.ViewModel"
             mc:Ignorable="d" d:DesignWidth="350" Height="250">
    <UserControl.DataContext>
        <VM:CustomerListViewModel />
    </UserControl.DataContext>
    <Grid Height="250" VerticalAlignment="Top" HorizontalAlignment="Center" Width="350">
        <ListView 
                  ItemsSource="{Binding Customers}" >

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Customers" Width="300" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
