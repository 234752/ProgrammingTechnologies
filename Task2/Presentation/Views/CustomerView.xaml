<UserControl x:Class="Presentation.Views.CustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.Views"
        xmlns:VM="clr-namespace:Presentation.ViewModel"
        mc:Ignorable="d"
        Height="450" Width="800">
    <UserControl.DataContext>
        <VM:CustomerViewModel />
    </UserControl.DataContext>
    <Grid>
        <TextBox x:Name="CustomerIdTB" HorizontalAlignment="Left" Margin="112,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Height="62" Text="{Binding Id}"/>
        <TextBox x:Name="CustomerFirstNameTB" HorizontalAlignment="Left" Margin="280,162,0,0" TextWrapping="Wrap" Text="{Binding FirstName}" VerticalAlignment="Top" Width="120" Height="48"/>
        <TextBox x:Name="CustomerLastNameTB" HorizontalAlignment="Left" Margin="454,162,0,0" TextWrapping="Wrap" Text="{Binding LastName}" VerticalAlignment="Top" Width="120" Height="55"/>

    </Grid>
</UserControl>
